{
  "name": "mith-static",
  "description": "The website of the Maryland Institute for Technology in the Humanities",
  "version": "0.4.0",
  "author": "MITH <mith@umd.edu>",
  "keywords": [
    "astro"
  ],
  "license": "0BSD",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "astro dev",
    "prebuild": "cp -r node_modules/@fontsource public/styles",
    "build": "npm run static-build",
    "static-build": "astro build --experimental-static-build",
    "preview": "astro preview",
    "persist": "node scripts/persist.js",
    "compose": "node scripts/compose.js",
    "release": "node scripts/release.js",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,astro}\"",
    "publish": "astro build && npm run rsync",
    "rsync": "rsync --archive --recursive --delete dist/ ubuntu@mith.umd.edu:/var/www/mith.umd.edu"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/umd-mith/mith-static"
  },
  "bugs": {
    "url": "https://github.com/umd-mith/mith-static/issues"
  },
  "dependencies": {
    "@fontsource/literata": "^4.5.9",
    "astro": "^1.0.0-beta.58",
    "date-fns": "^2.25.0",
    "is-plain-obj": "^4.1.0",
    "jsdom": "^20.0.0"
  },
  "devDependencies": {
    "@astrojs/preact": "^0.2.0",
    "@astrojs/tailwind": "^0.2.2",
    "airtable": "^0.11.4",
    "dotenv": "^16.0.1",
    "prettier": "^2.7.1",
    "prettier-plugin-astro": "^0.1.1",
    "tailwindcss": "^3.1.4"
  }
}
