{
  "name": "mith-static",
  "description": "The website of the Maryland Institute for Technology in the Humanities",
  "version": "0.4.0",
  "author": "MITH <mith@umd.edu>",
  "keywords": [
    "astro"
  ],
  "license": "0BSD",
  "scripts": {
    "start": "astro dev",
    "prebuild": "cp -r node_modules/@fontsource public/styles",
    "build": "astro build",
    "preview": "astro preview",
    "persist": "node scripts/persist.js",
    "compose": "node scripts/compose.js",
    "release": "node scripts/release.js",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "publish": "astro build && npm run rsync",
    "rsync": "rsync --archive --recursive --delete dist/ ubuntu@mith.umd.edu:/var/www/mith.umd.edu"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/umd-mith/mith-static"
  },
  "bugs": {
    "url": "https://github.com/umd-mith/mith-static/issues"
  },
  "dependencies": {
    "@fontsource/literata": "^4.5.0",
    "astro": "^0.0.0-build-20211022225750",
    "date-fns": "^2.25.0",
    "is-plain-obj": "^4.0.0",
    "jsdom": "^18.0.1"
  },
  "devDependencies": {
    "airtable": "^0.11.1",
    "dotenv": "^10.0.0",
    "prettier": "^2.4.1"
  }
}
